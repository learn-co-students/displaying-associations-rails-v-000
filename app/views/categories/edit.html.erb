<h1>Edit Category</h1>

<%= form_for(@category) do |f| %>
  <div class="field">
    <%= f.label :name, 'Category Name:' %><br>
    <%= f.text_field :name %>
  </div>

  <% @category.posts.each do |p| %>
    <li><%= link_to p.title, post_path(p) %></li>
  <%end%>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
